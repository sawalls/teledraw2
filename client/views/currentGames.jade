script(src="currentGames.js")
div(ng-controller="currentGamesController")
    p Current Games
    p(ng-show="showError") {{currentGamesErrorMsg}}
    .row
        table.table.table-bordered.table-nonfluid.col-sm-6
            tr
                th Game Name
                th Creator
            tr(ng-repeat="game in gameList", ng-click="rowClickedHandler(game)")
                td {{game.gameName}}
                td {{game.creatorUsername}}

